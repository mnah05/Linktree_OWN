{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "module": "esnext", // or "ESNext" if you want ESM
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": false, // <-- allow emitting!
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
